<div class="container" style="margin-top:50px">
    <form action="/update_write/<%=@one_post.id%>" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input type="text" value="<%=@one_post.title%>" class="form-control" name="view_post_title" placeholder="제목을 입력하세요">
      </div>
      
      <div class="form-group">
        <label>Content</label>
        <textarea type="text" class="form-control" name="view_post_content" placeholder="내용을 입력하세요" rows="5">
            <%=@one_post.content%>
        </textarea>
      </div>
      <button type="submit" class="btn btn-default btn-lg btn-block">Write</button>
    </form>
</div>